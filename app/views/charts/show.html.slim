- content_for :doc_head do
  = javascript_include_tag "hc/highcharts"
  = javascript_include_tag "hc/themes/gray"

javascript:
  var chart;
  $(document).ready(function() {
  	chart = new Highcharts.Chart({
  		chart: { renderTo: 'container', defaultSeriesType: 'column'},
  		title: { text: 'Productivity Chart'},
  		subtitle: { text: 'Average Complete Pomodoroz'},
  		xAxis: { categories: [ 'Daily', 'Weekly', 'Monthly' ] },
  		yAxis: { min: 0, title: { text: 'Pomodoroz' } },
  		legend: {
  			layout: 'vertical',
  			backgroundColor: '#FFFFFF',
  			align: 'left',
  			verticalAlign: 'top',
  			x: 100,
  			y: 70,
  			floating: true,
  			shadow: true
  		},
  		tooltip: {
  			formatter: function() {
  				return ''+
  					this.x +': '+ this.y +' pomz';
  			}
  		},
  		plotOptions: {
  			column: {
  				pointPadding: 0.2,
  				borderWidth: 0
  			}
  		},
  	  series: [
  	    { name: 'User1', data: [49.9, 71.5, 106.4]},
  	    { name: 'User2', data: [28, 60, 88]},
  	  ]
  	});
	
	
  });
  
div#container